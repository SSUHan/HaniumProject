<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}"
    android:orientation="vertical"
    android:background="#77770067" >

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     요일"
        android:textSize="15dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp">
        <Button
            android:id="@+id/dayplus1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="월"
            android:background="#ffff0000"/>
        <Button
            android:id="@+id/dayplus2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="화"
            android:background="#ff00ff00"/>
        <Button
            android:id="@+id/dayplus3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="수"
            android:background="#ff00ff00"/>
        <Button
            android:id="@+id/dayplus4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="목"
            android:background="#ff00ff00"/>
        <Button
            android:id="@+id/dayplus5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="금"
            android:background="#ff00ff00"/>
        <Button
            android:id="@+id/dayplus6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="토"
            android:background="#ff00ff00"/>
        <Button
            android:id="@+id/dayplus7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="일"
            android:background="#ff00ff00"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     강의실                   "/>
        <EditText
            android:id="@+id/plusClassNum"
    	    android:layout_width="100dp"
  		    android:layout_height="wrap_content"
         />
     </LinearLayout>
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     시간                  "/>
        <TextView
        android:id="@+id/timeplus1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="9:30"
        android:textSize="20dp"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     ~          "/>
        <TextView
        android:id="@+id/timeplus2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="10:30"
        android:textSize="20dp"
         />
     </LinearLayout>
</LinearLayout>
